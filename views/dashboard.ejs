<%- include('partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-dark">
      <%- include('partials/sidebar', { path: '/dashboard' }) %>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
      </div>

      <!-- Bill Management Section -->
      <div class="mb-3">
        <h4 class="text-muted">
          <i class="fas fa-file-invoice me-2"></i>Bill Management
        </h4>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-primary text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Create Bill</h6>
                </div>
                <i class="fas fa-file-invoice fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/bills/create" class="text-white text-decoration-none">Create New Bill</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-success text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Manage Bills</h6>
                </div>
                <i class="fas fa-file-invoice-dollar fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/bills" class="text-white text-decoration-none">View All Bills</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-warning text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Customers</h6>
                </div>
                <i class="fas fa-users fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/customers" class="text-white text-decoration-none">Manage Customers</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-danger text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Products</h6>
                </div>
                <i class="fas fa-boxes fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/products" class="text-white text-decoration-none">Manage Products</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Services Section -->
      <div class="mb-3 mt-4">
        <h4 class="text-muted">
          <i class="fas fa-cogs me-2"></i>Additional Services
        </h4>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-info text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Return Management</h6>
                </div>
                <i class="fas fa-undo-alt fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/returns" class="text-white text-decoration-none">Manage Returns</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-secondary text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Create Return</h6>
                </div>
                <i class="fas fa-exchange-alt fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/returns/select-bill" class="text-white text-decoration-none">Create Return Bill</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-dark text-white h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Unknown Bills</h6>
                </div>
                <i class="fas fa-question-circle fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/bills/unknown" class="text-white text-decoration-none">Manage Unknown Bills</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card bg-purple text-white h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Bill Templates</h6>
                </div>
                <i class="fas fa-file-invoice fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/templates" class="text-white text-decoration-none">Customize Bill Layout</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Quotation Management Section -->
      <div class="mb-3 mt-4">
        <h4 class="text-muted">
          <i class="fas fa-file-alt me-2"></i>Quotation Management
        </h4>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Create Quotation</h6>
                </div>
                <i class="fas fa-file-alt fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotations/create" class="text-white text-decoration-none">Create New Quotation</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Manage Quotations</h6>
                </div>
                <i class="fas fa-file-contract fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotations" class="text-white text-decoration-none">View All Quotations</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Quotation Products</h6>
                </div>
                <i class="fas fa-cube fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotation-products" class="text-white text-decoration-none">Manage Quotation Products</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); color: #333 !important;">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase text-dark">Add Quotation Product</h6>
                </div>
                <i class="fas fa-plus-circle fa-2x text-dark"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotation-products/create" class="text-dark text-decoration-none">Add New Quotation Product</a>
              <i class="fas fa-arrow-circle-right text-dark"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Quotation 2.0 Section -->
      <div class="mb-3 mt-4">
        <h4 class="text-muted">
          <i class="fas fa-file-invoice me-2"></i>Quotation 2.0 (Direct Entry)
        </h4>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase">Create Quotation 2.0</h6>
                  <small>Direct item entry</small>
                </div>
                <i class="fas fa-file-invoice fa-2x"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotations2/create" class="text-white text-decoration-none">Create New Quotation 2.0</a>
              <i class="fas fa-arrow-circle-right text-white"></i>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
          <div class="card text-white h-100" style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); color: #333 !important;">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-uppercase text-dark">Manage Quotations 2.0</h6>
                  <small class="text-dark">View all quotations</small>
                </div>
                <i class="fas fa-file-invoice-dollar fa-2x text-dark"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
              <a href="/quotations2" class="text-dark text-decoration-none">View All Quotations 2.0</a>
              <i class="fas fa-arrow-circle-right text-dark"></i>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">Quick Actions</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <div class="d-grid gap-2">
                    <a href="/bills/create" class="btn btn-outline-primary">
                      <i class="fas fa-file-invoice me-2"></i> Create New Bill
                    </a>
                    <a href="/products/add" class="btn btn-outline-danger">
                      <i class="fas fa-plus me-2"></i> Add New Product
                    </a>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-grid gap-2">
                    <a href="/bills" class="btn btn-outline-success">
                      <i class="fas fa-file-invoice-dollar me-2"></i> View All Bills
                    </a>
                    <a href="/customers" class="btn btn-outline-warning">
                      <i class="fas fa-users me-2"></i> View All Customers
                    </a>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-grid gap-2">
                    <a href="/quotations/create" class="btn btn-outline-info">
                      <i class="fas fa-file-alt me-2"></i> Create New Quotation
                    </a>
                    <a href="/quotation-products/create" class="btn btn-outline-secondary">
                      <i class="fas fa-cube me-2"></i> Add Quotation Product
                    </a>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-grid gap-2">
                    <a href="/quotations" class="btn btn-outline-primary">
                      <i class="fas fa-file-contract me-2"></i> View All Quotations
                    </a>
                    <a href="/quotation-products" class="btn btn-outline-dark">
                      <i class="fas fa-cubes me-2"></i> Manage Quotation Products
                    </a>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-grid gap-2">
                    <a href="/quotations2/create" class="btn btn-outline-success">
                      <i class="fas fa-file-invoice me-2"></i> Create Quotation 2.0
                    </a>
                    <a href="/quotations2" class="btn btn-outline-warning">
                      <i class="fas fa-file-invoice-dollar me-2"></i> View Quotations 2.0
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('partials/footer') %>
